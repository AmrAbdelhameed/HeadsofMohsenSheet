<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.amr.headsofmohsensheet">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/osc_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Home"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Login"
            android:label="Login As Head" />
        <activity
            android:name=".MainActivity"
            android:label="Show All Members" />
        <activity
            android:name=".AddFriend"
            android:label="Add Member">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.amr.headsofmohsensheet.MainActivity" />
        </activity>
        <activity
            android:name=".MemberActivity"
            android:label="Login As Member" />
        <activity
            android:name=".ShowAllMembersAsMember"
            android:label="Show All Members" />
        <activity android:name=".DetailsMember"></activity>
    </application>

</manifest>